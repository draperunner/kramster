{
  "name": "kramster",
  "version": "2.0.0",
  "description": "Kramster is a quiz app for making exam preparation more fun",
  "main": "src/server/server.js",
  "engines": {
    "node": "20",
    "npm": "10"
  },
  "scripts": {
    "start": "DOTENV_CONFIG_PATH=.env.staging webpack serve --config webpack.config.dev.js",
    "build": "NODE_ENV=production webpack --progress --config webpack.config.prod.js",
    "build:staging": "DOTENV_CONFIG_PATH=.env.staging npm run build",
    "build:prod": "DOTENV_CONFIG_PATH=.env.prod npm run build",
    "prod": "npm run build:prod && NODE_ENV=production node dist/server/server.js",
    "eslint": "eslint --ext js,jsx,ts,tsx src/",
    "stylelint": "stylelint src/**/*.css",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "ts": "tsc --noEmit",
    "lint": "npm run eslint && npm run stylelint && npm run format:check",
    "test": "mocha --exit",
    "test:ci": "firebase emulators:exec 'mocha --exit' -P staging",
    "emulators": "firebase emulators:start",
    "fill-db": "FIRESTORE_EMULATOR_HOST=localhost:8080 ts-node ./scripts/fill-db.ts",
    "deploy": "npm run build:prod && firebase deploy -P prod",
    "deploy:staging": "npm run build:staging && firebase deploy -P staging"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/draperunner/Kramster.git"
  },
  "author": "Mats Byrkjeland",
  "license": "Apache-2.0",
  "dependencies": {
    "firebase": "^9.23.0",
    "katex": "^0.15.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.1",
    "sanitize-html": "^2.11.0",
    "wilson-score": "^1.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.9",
    "@babel/core": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@firebase/testing": "^0.20.11",
    "@types/katex": "^0.11.1",
    "@types/node": "^20.11.19",
    "@types/qs": "^6.9.11",
    "@types/react": "^18.2.56",
    "@types/react-dom": "^18.2.19",
    "@types/sanitize-html": "^2.11.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "babel-loader": "^8.3.0",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.10.0",
    "dotenv-webpack": "^7.1.1",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "file-loader": "^6.2.0",
    "firebase-admin": "^10.3.0",
    "firebase-tools": "^13.3.0",
    "html-webpack-plugin": "^5.6.0",
    "mocha": "^10.3.0",
    "prettier": "^3.2.5",
    "react-transform-hmr": "^1.0.4",
    "source-map-loader": "^3.0.2",
    "style-loader": "^3.3.4",
    "stylelint": "^14.16.1",
    "stylelint-config-standard": "^25.0.0",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "webpack": "^5.90.2",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.15.1",
    "webpack-merge": "^5.10.0"
  }
}
